<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".tasjile_hajiz_rendifu">





    <LinearLayout

        android:id="@+id/lll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#4682b4"
        android:orientation="vertical">



        //___________________linear layout___________________________________
        01_________________________________________________________

        //**********************************************************************


        //___________________linear
        layout__02_________________________________________________________

        <TextView
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:radius="60dp"
            android:text="احجز موعد لتلقيح ابنك"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="#4682b4"
            android:gravity="center"
            android:orientation="horizontal">

            //card01

            <androidx.cardview.widget.CardView
                android:id="@+id/tasjil01"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp">


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/appointment" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="تسحيل"

                    android:textColor="#4682b4"

                    android:textSize="30dp"

                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>
            //card02


            <androidx.cardview.widget.CardView
                android:id="@+id/ta3dil011"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/i5"
                    android:layout_width="138dp"
                    android:layout_height="89dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/clock" />

                <TextView
                    android:layout_width="148dp"
                    android:layout_height="134dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="تاجيل"
                    android:textColor="#4682b4"

                    android:textSize="20dp"

                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>
        //**********************card    ****************

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/mawa3idy"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/i5d"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/delete" />
                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="حدف"
                    android:textColor="#4682b4"

                    android:textSize="20dp"

                    android:textStyle="bold" />




            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/i3ref01"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/i5f"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/document" />

                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="مواعيدي"
                    android:textColor="#4682b4"

                    android:textSize="20dp"

                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="ادا واجهك اي مشكل في التسجيل اتصل بالمسير من خلال طلب استشارة"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />


    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>







