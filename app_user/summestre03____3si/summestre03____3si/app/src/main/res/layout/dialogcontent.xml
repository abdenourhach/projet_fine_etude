<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb"
    android:orientation="vertical">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4682b4"
        android:gravity="center"
        android:text="تعديل معلومات المريض"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/uimgurl"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/costum_white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/uname"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/costum_white"
        android:hint="الاسم"
        android:padding="10dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/ucourse"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/costum_white"
        android:hint="تاريخ الحجز"
        android:padding="10dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/uemail"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/costum_white"
        android:hint="العمر"
        android:padding="10dp"
        android:textSize="20sp" />

    <Button

        android:id="@+id/usubmit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:background="@drawable/costum02"
        android:text="تحديث"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:backgroundTint="#4682b4" />

</LinearLayout>