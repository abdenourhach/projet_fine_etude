<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4682b4"
    tools:context=".couter_chat">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/logo_splash" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="@font/spartan_bold"
            android:gravity="center"
            android:text="الرد على الاستشارات"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp" />

        <TextView
            android:layout_width="351dp"
            android:layout_height="54dp"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="@font/spartan_thin"
            android:gravity="center"
            android:text="الرد على اسئلة واستشارات اولياء الامور"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="133dp"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="@font/spartan_thin"
            android:gravity="center"
            android:text="ادا واحهت اي مشكلة اتصل بالدعم"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <ProgressBar
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_margin="@dimen/_5sdp" />

    </LinearLayout>


</RelativeLayout>