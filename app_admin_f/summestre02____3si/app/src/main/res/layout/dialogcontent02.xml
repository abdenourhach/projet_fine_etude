<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb"
    android:orientation="vertical">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:gravity="center"
        android:text="تعديل معلومات التلقيح"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/uimgurl02"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/costum_white"
        android:padding="10dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/uname02"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/costum_white"
        android:hint="اسم التلقيح"
        android:padding="10dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/ucourse02"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/costum_white"
        android:hint="الشرح"
        android:padding="10dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/uemail02"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/costum_white"
        android:hint="مضاد"
        android:padding="10dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/usubmit02"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:background="@drawable/costum02"
        android:padding="10dp"
        android:text="تحديث التلقيح"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:backgroundTint="@color/purple_500" />

</LinearLayout>